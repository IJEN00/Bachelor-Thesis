@model InventoryApp.Models.Project

@{
    ViewData["Title"] = "Smazat Projekt";
    ViewData["ContentWidth"] = "content-narrow";
}

<h3 class="mb-3 text-danger">Opravdu smazat tento projekt?</h3>

<div class="card border-danger shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Název</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Popis</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Vytvořen</dt>
            <dd class="col-sm-9">@Model.CreatedAt</dd>        
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Zpět
        </a>
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash"></i> Potvrdit smazání
        </button>
    </div>
</form>
