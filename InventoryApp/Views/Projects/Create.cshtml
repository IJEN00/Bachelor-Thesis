@model InventoryApp.Models.Project

@{
    ViewData["Title"] = "Nový projekt";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden" style="max-width: 600px; width: 100%;">

        <div class="card-header bg-primary text-white text-center py-4 border-0">
            <div class="mb-2">
                <i class="bi bi-folder-plus" style="font-size: 3rem; opacity: 0.9;"></i>
            </div>
            <h4 class="mb-0 fw-bold">Nový projekt</h4>
            <p class="mb-0 opacity-75 small">Založte nový projekt.</p>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold small text-uppercase text-muted">Název projektu *</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-fonts"></i></span>
                        <input asp-for="Name" class="form-control border-start-0 ps-0" placeholder="Např. Zdrojová deska v2" />
                    </div>
                    <span asp-validation-for="Name" class="text-danger small"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-bold small text-uppercase text-muted">Popis</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-card-text"></i></span>
                        <textarea asp-for="Description" class="form-control border-start-0 ps-0" rows="4" placeholder="Volitelný popis..."></textarea>
                    </div>
                    <span asp-validation-for="Description" class="text-danger small"></span>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        Vytvořit projekt
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-lg border">
                        Zrušit
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}