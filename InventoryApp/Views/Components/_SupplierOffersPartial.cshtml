@model IEnumerable<InventoryApp.Models.SupplierOffer>

@if (!Model.Any())
{
    <div class="p-4 text-center text-muted border rounded-4 bg-light bg-opacity-50">
        <i class="bi bi-basket3 opacity-25 fs-1 d-block mb-2"></i>
        <span class="small">Nebyly nalezeny žádné nabídky u dodavatelů.</span>
    </div>
}
else
{
    <div class="table-responsive border rounded-4 overflow-hidden mt-3 shadow-sm">
        <table class="table table-hover align-middle mb-0">
            <thead class="bg-light text-muted small text-uppercase">
                <tr>
                    <th class="ps-3 border-bottom-0">Dodavatel</th>
                    <th class="border-bottom-0">Cena / ks</th>
                    <th class="border-bottom-0">Měna</th>
                    <th class="text-end pe-3 border-bottom-0">Akce</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="ps-3 fw-semibold text-dark">
                            @item.Supplier?.Name
                        </td>
                        <td>
                            <span class="badge bg-success bg-opacity-10 text-success border border-success px-2 py-1">
                                @item.UnitPrice.ToString("N2")
                            </span>
                        </td>
                        <td class="text-muted small">
                            @item.Currency
                        </td>
                        <td class="text-end pe-3">
                            @if (!string.IsNullOrEmpty(item.ProductUrl))
                            {
                                <a href="@item.ProductUrl" target="_blank" class="btn btn-sm btn-outline-primary rounded-pill px-3 shadow-sm">
                                    Obchod <i class="bi bi-box-arrow-up-right ms-1" style="font-size: 0.75rem"></i>
                                </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="text-end mt-1">
        <small class="text-muted fst-italic" style="font-size: 0.7em;">
            Ceny jsou orientační a mohou se změnit.
        </small>
    </div>
}