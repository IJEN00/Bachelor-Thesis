@model IEnumerable<InventoryApp.Models.Component>

<table class="table table-hover align-middle shadow-sm rounded">
    <thead class="table-light">
        <tr>
            <th>ID</th>
            <th>Název</th>
            <th>Výrobce</th>
            <th>Označení</th>
            <th class="text-center">Sklad</th>
            <th>Umístění</th>
            <th class="text-end">Akce</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var item in Model)
            {
                int reorderPoint = (item.ReorderPoint ?? 5);
                int quantity = item.Quantity; // byte -> int
                int toBuy = Math.Max(reorderPoint - quantity, 0);

                var qtyClass =
                    quantity == 0 ? "text-center fw-semibold text-danger" :
                    quantity < reorderPoint ? "text-center fw-semibold text-warning" :
                    "text-center fw-semibold";

                <tr data-id="@item.Id">
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Manufacturer</td>
                    <td>@item.ManufacturerPartNumber</td>

                    <td class="text-center">
                        <div class="fw-semibold">@quantity ks</div>

                        @if (quantity == 0)
                        {
                            <span class="badge bg-danger mt-1"
                                  data-bs-toggle="tooltip"
                                  title="Min. stav: @reorderPoint, koupit: @toBuy">
                                Není skladem
                            </span>
                        }
                        else if (quantity < reorderPoint)
                        {
                            <span class="badge bg-warning text-dark mt-1"
                                  data-bs-toggle="tooltip"
                                  title="Min. stav: @reorderPoint, koupit: @toBuy">
                                Dochází
                            </span>
                        }
                        else
                        {
                            <span class="badge bg-success mt-1"
                                  data-bs-toggle="tooltip"
                                  title="Min. stav: @reorderPoint">
                                OK
                            </span>
                        }
                    </td>

                    <td>
                        @if (item.Location != null)
                        {
                            <div class="d-flex flex-wrap gap-1">
                                <span class="badge bg-primary">@item.Location.Rack</span>
                                @if (!string.IsNullOrEmpty(item.Location.Drawer))
                                {
                                    <span class="badge bg-info text-dark">Šuplík @item.Location.Drawer</span>
                                }
                                @if (!string.IsNullOrEmpty(item.Location.Box))
                                {
                                    <span class="badge bg-success">Krab. @item.Location.Box</span>
                                }
                            </div>
                        }
                        else
                        {
                            <span class="text-muted fst-italic">–</span>
                        }
                    </td>

                    <td class="text-end">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-secondary">Detail</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Upravit</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Smazat</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="8"><em>Zatím je tu prázdno.</em></td>
            </tr>
        }
    </tbody>
</table>