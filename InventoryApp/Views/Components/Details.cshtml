@model InventoryApp.Models.Component
@{
    ViewData["Title"] = $"Detail: {Model.Name}";

    // --- Logika stavu skladu ---
    int reorderPoint = Model.ReorderPoint ?? 5;
    int quantity = Model.Quantity;
    int toBuy = Math.Max(reorderPoint - quantity, 0);

    string statusColor = quantity == 0 ? "danger" : (quantity < reorderPoint ? "warning" : "success");
    string statusText = quantity == 0 ? "Vyprodáno" : (quantity < reorderPoint ? "Dochází" : "Skladem");
    string statusIcon = quantity == 0 ? "bi-x-circle" : (quantity < reorderPoint ? "bi-exclamation-circle" : "bi-check-circle");
    string badgeClass = $"bg-{statusColor} bg-opacity-10 text-{statusColor} border border-{statusColor}";

    var tx = ViewBag.RecentTransactions as List<InventoryApp.Models.InventoryTransaction> ?? new();
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
    <style>
        .dataTables_wrapper .row {
            margin: 0;
            padding: 0;
        }

        .dataTables_filter, .dataTables_length {
            display: none !important;
        }

        .page-link {
            border: none;
            color: #6c757d;
            border-radius: 0.375rem;
            margin: 0 3px;
            font-weight: 500;
            font-size: 0.875rem;
            padding: 0.5rem 0.75rem;
        }

        .page-link:hover {
            background-color: #f8f9fa;
            color: #0d6efd;
        }

        .page-item.active .page-link {
            background-color: #0d6efd;
            color: #fff;
            box-shadow: 0 2px 5px rgba(13, 110, 253, 0.3);
        }

        .page-item.disabled .page-link {
            background-color: transparent;
            color: #adb5bd;
        }

        .dataTables_paginate {
            display: flex;
            justify-content: flex-end;
            padding: 1rem !important;
        }

        .dataTables_info {
            display: none !important;
        }
    </style>
}

<div class="container py-4" style="max-width: 1200px;">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold mb-0">Detail součástky</h2>
            <p class="text-muted mb-0">Přehled informací a historie pohybů</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary shadow-sm">
                <i class="bi bi-arrow-left"></i> Zpět
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary shadow-sm">
                <i class="bi bi-pencil me-1"></i> Upravit
            </a>
            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger shadow-sm">
                <i class="bi bi-trash"></i>
            </a>
        </div>
    </div>

    <div class="card border-0 shadow-sm rounded-4 mb-4 overflow-hidden">
        <div class="card-body p-4">
            <div class="d-flex align-items-center">
                <div class="icon-shape bg-primary bg-opacity-10 text-primary rounded-3 p-3 me-3 shadow-sm border border-primary border-opacity-10">
                    <i class="bi bi-cpu fs-1"></i>
                </div>

                <div class="flex-grow-1">
                    <h3 class="fw-bold mb-1">@Model.Name</h3>
                    <div class="d-flex align-items-center gap-3 text-muted">
                        <small><i class="bi bi-hash"></i> ID: @Model.Id</small>
                        @if (!string.IsNullOrEmpty(Model.Manufacturer))
                        {
                            <span class="vr"></span>
                            <small><i class="bi bi-building me-1"></i> @Model.Manufacturer</small>
                        }
                        @if (!string.IsNullOrEmpty(Model.ManufacturerPartNumber))
                        {
                            <span class="vr"></span>
                            <small><i class="bi bi-qr-code me-1"></i> @Model.ManufacturerPartNumber</small>
                        }
                    </div>
                </div>

                <div class="text-end border-start ps-4 d-none d-md-block">
                    <div class="text-muted small text-uppercase fw-bold mb-1">Stav skladu</div>
                    <div class="d-flex align-items-center justify-content-end gap-2">
                        <h2 class="fw-bold mb-0 @(quantity == 0 ? "text-danger" : "")">@quantity <span class="fs-5 text-muted fw-normal">ks</span></h2>
                    </div>
                    <div class="mt-2">
                        <span class="badge rounded-pill @badgeClass px-3 py-2">
                            <i class="bi @statusIcon me-1"></i> @statusText
                            @if (quantity < reorderPoint)
                            {
                                <span>(chybí @toBuy ks)</span>
                            }
                        </span>
                    </div>
                </div>
            </div>

            <div class="d-md-none mt-3 pt-3 border-top">
                <div class="d-flex justify-content-between align-items-center">
                    <span class="fw-bold">Stav skladu:</span>
                    <span class="badge rounded-pill @badgeClass">@quantity ks (@statusText)</span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-4">

        <div class="col-lg-8">

            <div class="card border-0 shadow-sm rounded-4 mb-4">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0 d-flex justify-content-between align-items-center">
                    <h5 class="fw-bold mb-0"><i class="bi bi-globe me-2 text-info"></i>Online dostupnost</h5>
                    <button id="btnLoadOffers" class="btn btn-sm btn-outline-primary rounded-pill" onclick="loadOffers(@Model.Id)">
                        <i class="bi bi-search me-1"></i> Načíst ceny
                    </button>
                </div>
                <div class="card-body p-4">
                    <div id="offersContainer" class="text-muted small">
                        Kliknutím na tlačítko zjistíte aktuální ceny a dostupnost u dodavatelů.
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4 overflow-hidden">
                <div class="card-header bg-white border-bottom px-4 pt-3">
                    <ul class="nav nav-tabs card-header-tabs" id="detailTabs" role="tablist">
                        <li class="nav-item">
                            <button class="nav-link active fw-bold text-dark" id="history-tab" data-bs-toggle="tab" data-bs-target="#history" type="button">
                                <i class="bi bi-clock-history me-2"></i>Historie pohybů
                            </button>
                        </li>
                        <li class="nav-item">
                            <button class="nav-link fw-bold text-dark" id="files-tab" data-bs-toggle="tab" data-bs-target="#files" type="button">
                                <i class="bi bi-paperclip me-2"></i>Přílohy <span class="badge bg-light text-dark border ms-1">@(Model.Documents?.Count ?? 0)</span>
                            </button>
                        </li>
                    </ul>
                </div>

                <div class="card-body p-0">
                    <div class="tab-content" id="detailTabsContent">

                        <div class="tab-pane fade show active" id="history" role="tabpanel">
                            @if (tx.Any())
                            {
                                <div class="table-responsive">
                                    <table id="historyTable" class="table table-hover align-middle mb-0" style="width:100%">
                                        <thead class="bg-light text-muted small text-uppercase">
                                            <tr>
                                                <th class="ps-4">Datum</th>
                                                <th>Typ</th>
                                                <th class="text-center">Změna</th>
                                                <th class="pe-4">Poznámka</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var t in tx)
                                            {
                                                var isPlus = t.DeltaQuantity > 0;
                                                var color = isPlus ? "text-success" : "text-danger";
                                                var sign = isPlus ? "+" : "";
                                                <tr>
                                                    <td class="ps-4 text-muted small" data-order="@t.CreatedAt.Ticks">
                                                        @t.CreatedAt.ToLocalTime().ToString("d. M. yyyy HH:mm")
                                                    </td>
                                                    <td>
                                                        <span class="badge bg-light text-dark border fw-normal">@t.Type</span>
                                                    </td>
                                                    <td class="text-center fw-bold @color">
                                                        @sign@t.DeltaQuantity
                                                    </td>
                                                    <td class="pe-4 text-muted small">
                                                        @(string.IsNullOrWhiteSpace(t.Note) ? "–" : t.Note)
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="p-5 text-center text-muted">
                                    <i class="bi bi-clock-history fs-1 opacity-25"></i>
                                    <p class="mt-2 mb-0">Zatím žádné pohyby.</p>
                                </div>
                            }
                        </div>

                        <div class="tab-pane fade" id="files" role="tabpanel">
                            @if (Model.Documents != null && Model.Documents.Any())
                            {
                                <ul class="list-group list-group-flush">
                                    @foreach (var doc in Model.Documents.OrderByDescending(d => d.UploadedAt))
                                    {
                                        <li class="list-group-item d-flex justify-content-between align-items-center px-4 py-3">
                                            <div class="d-flex align-items-center gap-3">
                                                <div class="icon-shape bg-light text-primary rounded-circle p-2">
                                                    <i class="bi bi-file-earmark-text"></i>
                                                </div>
                                                <div>
                                                    <a href="~/@doc.FilePath" target="_blank" class="fw-semibold text-decoration-none text-dark stretched-link">
                                                        @doc.FileName
                                                    </a>
                                                    <div class="small text-muted">Nahráno @doc.UploadedAt.ToLocalTime().ToString("g")</div>
                                                </div>
                                            </div>
                                            <i class="bi bi-download text-muted"></i>
                                        </li>
                                    }
                                </ul>
                            }
                            else
                            {
                                <div class="p-5 text-center text-muted">
                                    <i class="bi bi-folder2-open fs-1 opacity-25"></i>
                                    <p class="mt-2 mb-0">Žádné přílohy.</p>
                                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-primary mt-2">Nahrát soubor</a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div class="col-lg-4">

            <div class="card border-0 shadow-sm rounded-4 mb-4 bg-light">
                <div class="card-body p-4">
                    <h6 class="text-uppercase text-muted fw-bold small mb-3"><i class="bi bi-sliders me-2"></i>Rychlé akce</h6>

                    <div class="bg-white p-3 rounded-3 shadow-sm mb-3 border border-success border-opacity-25">
                        <form asp-action="AddStock" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="small fw-bold text-success mb-2"><i class="bi bi-plus-circle me-1"></i> Naskladnit</label>
                            <div class="input-group input-group-sm mb-2">
                                <input type="number" name="amount" class="form-control" placeholder="Ks" min="1" value="1">
                                <input type="text" name="note" class="form-control w-50" placeholder="Poznámka...">
                                <button class="btn btn-success" type="submit">OK</button>
                            </div>
                        </form>
                    </div>

                    <div class="bg-white p-3 rounded-3 shadow-sm border border-danger border-opacity-25">
                        <form asp-action="UseStock" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <label class="small fw-bold text-danger mb-2"><i class="bi bi-dash-circle me-1"></i> Vyskladnit</label>
                            <div class="input-group input-group-sm mb-2">
                                <input type="number" name="amount" class="form-control" placeholder="Ks" min="1" value="1">
                                <input type="text" name="note" class="form-control w-50" placeholder="Poznámka...">
                                <button class="btn btn-danger" type="submit">OK</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>

            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-bottom-0 pt-4 px-4 pb-0">
                    <h6 class="fw-bold mb-0 text-uppercase text-muted small"><i class="bi bi-geo-alt me-2"></i>Umístění</h6>
                </div>
                <div class="card-body p-4">
                    @if (Model.Location != null)
                    {
                        <div class="d-flex flex-column gap-2">
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
                                <span class="text-muted">Regál</span>
                                <span class="badge bg-light text-dark border fw-normal px-2">
                                    <i class="bi bi-grid-3x3 me-1 text-muted"></i> @Model.Location.Rack
                                </span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center border-bottom pb-2">
                                <span class="text-muted">Šuplík</span>
                                @if (!string.IsNullOrEmpty(Model.Location.Drawer))
                                {
                                    <span class="badge bg-light text-dark border fw-normal px-2">
                                        <i class="bi bi-inboxes me-1 text-muted"></i> @Model.Location.Drawer
                                    </span>
                                }
                                else
                                {

                                    <span class="text-muted small">–</span>
                                }
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="text-muted">Krabička</span>
                                @if (!string.IsNullOrEmpty(Model.Location.Box))
                                {
                                    <span class="badge bg-light text-dark border fw-normal px-2">
                                        <i class="bi bi-box-seam me-1 text-muted"></i> @Model.Location.Box
                                    </span>
                                }
                                else
                                {

                                    <span class="text-muted small">–</span>
                                }
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-3 text-muted">
                            <i class="bi bi-geo-alt-fill opacity-25 fs-1"></i>
                            <p class="mb-0 mt-2 small">Bez umístění</p>
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="small">Nastavit</a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function() {
            if ($('#historyTable').length > 0) {
                $('#historyTable').DataTable({
                    language: {
                        url: "//cdn.datatables.net/plug-ins/1.13.4/i18n/cs.json",
                        paginate: {
                            first: "«",
                            last: "»",
                            next: "Další",
                            previous: "Zpět"
                        }
                    },
                    columnDefs: [
                        { orderable: false, targets: [1, 2, 3] } 
                    ],
                    order: [[0, 'desc']],

                    searching: false,
                    lengthChange: false,
                    info: false,

                    pageLength: 5,

                    stateSave: true
                });
            }
        });

        async function loadOffers(id) {
            const container = document.getElementById('offersContainer');
            const btn = document.getElementById('btnLoadOffers');

            btn.disabled = true;
            btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span> Hledám...';

            try {
                const response = await fetch('/Components/SearchOffers?id=' + id);
                if (!response.ok) throw new Error('Chyba sítě');
                const html = await response.text();
                container.innerHTML = html;
            } catch (error) {
                container.innerHTML = `<div class="alert alert-danger small mt-3"><i class="bi bi-exclamation-triangle me-1"></i> Chyba: ${error.message}</div>`;
            } finally {
                btn.disabled = false;
                btn.innerHTML = '<i class="bi bi-arrow-clockwise me-1"></i> Aktualizovat';
            }
        }
    </script>
}