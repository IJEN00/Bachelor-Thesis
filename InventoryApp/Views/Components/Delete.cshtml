@model InventoryApp.Models.Component
@{
    ViewData["Title"] = "Smazat součástku";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden" style="max-width: 600px; width: 100%;">

        <div class="card-header bg-danger text-white text-center py-4 border-0">
            <div class="mb-2">
                <i class="bi bi-exclamation-circle-fill" style="font-size: 3rem; opacity: 0.9;"></i>
            </div>
            <h4 class="mb-0 fw-bold">Opravdu smazat?</h4>
            <p class="mb-0 opacity-75 small">Tuto akci nelze vrátit zpět.</p>
        </div>

        <div class="card-body p-4 text-center">
            <p class="text-muted mb-4">
                Chystáte se trvale odstranit součástku:
            </p>

            <div class="bg-light rounded-3 p-3 mb-4 text-start border">
                <div class="d-flex align-items-center mb-3">
                    <div class="icon-shape bg-white text-danger rounded-3 p-3 me-3 shadow-sm border">
                        <i class="bi bi-cpu fs-4"></i>
                    </div>
                    <div>
                        <h5 class="fw-bold text-dark mb-0">@Model.Name</h5>
                        <small class="text-muted">@Model.Manufacturer | @Model.ManufacturerPartNumber</small>
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center border-top pt-3">
                    <span class="text-muted small text-uppercase fw-bold">Umístění</span>
                    <div>
                        @if (Model.Location != null)
                        {
                            <span class="badge bg-white text-dark border">@Model.Location.Rack</span>
                            @if (!string.IsNullOrEmpty(Model.Location.Drawer))
                            {
                                <span class="badge bg-white text-dark border">@Model.Location.Drawer</span>
                            }
                            @if (!string.IsNullOrEmpty(Model.Location.Box))
                            {
                                <span class="badge bg-white text-dark border">@Model.Location.Box</span>
                            }
                        }
                        else
                        {
                            <span class="text-muted fst-italic small">Bez umístění</span>
                        }
                    </div>
                </div>

                <div class="d-flex justify-content-between align-items-center border-top pt-2 mt-2">
                    <span class="text-muted small text-uppercase fw-bold">Skladem</span>
                    <span class="fw-bold">@Model.Quantity ks</span>
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2 justify-content-center">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4 border">
                        Zrušit
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4 shadow-sm">
                        <i class="bi bi-trash-fill me-2"></i> Smazat
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>