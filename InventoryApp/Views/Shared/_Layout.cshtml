@{
    var appName = "ElectroVentory";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ElectroVentory</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/InventoryApp.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />

    <style>
        body {
            min-height: 100vh;
            display: flex;
            background-color: #f8f9fa;
            margin: 0;
        }

        .sidebar {
            width: 250px;
            background-color: #212529;
            color: #fff;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            height: 100vh; 
            position: fixed; 
            left: 0;
            top: 0;
        }

        .main-content {
            margin-left: 250px; 
            flex: 1;
            display: flex;
            justify-content: center; 
            padding: 3rem 2rem; 
        }

        .main-inner {
            width: 100%;
            max-width: 1100px; 
        }

        @@media (max-width: 1400px) {
            .main-inner {
                max-width: 1000px;
            }
        }

        @@media (max-width: 1200px) {
            .main-inner

        {
            max-width: 900px;
        }

        }

        @@media (max-width: 992px) {
            .main-content

        {
            margin-left: 0; 
            padding: 2rem 1rem;
        }

        .main-inner {
            max-width: 100%;
        }

        }

        .sidebar .app-title {
            font-size: 1.3rem;
            font-weight: 600;
            padding: 1.2rem;
            text-align: center;
            background-color: #343a40;
            border-bottom: 1px solid #495057;
        }

        .sidebar a {
            color: #adb5bd;
            text-decoration: none;
            display: block;
            padding: 10px 20px;
            border-radius: 5px;
            margin: 4px 8px;
            transition: background 0.2s, color 0.2s;
        }

        .sidebar a:hover,
        .sidebar a.active {
            background-color: #495057;
            color: #fff;
        }

        .sidebar-footer {
            font-size: 0.9rem;
            color: #e9ecef; 
            text-align: center;
            padding: 1rem 0.5rem;
            border-top: 1px solid #495057;
        }

        .sidebar-footer .text-muted {
            color: #adb5bd !important;
        }

        .sidebar-footer small {
            color: #adb5bd;
        }

        .sidebar-footer a {
            color: #f8f9fa; 
            text-decoration: none;
            transition: color 0.2s;
        }

        .sidebar-footer a:hover {
            color: #0d6efd;
        }
    </style>
</head>
<body>
    <nav class="sidebar">
        <div>
            <div class="app-title">@appName</div>

            <div class="nav flex-column mt-2">
                <a asp-controller="Home" asp-action="Index">
                    <i class="bi bi-graph-up"></i> Dashboard
                </a>
                <a asp-controller="Components" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Components" ? "active" : "")">
                    <i class="bi bi-cpu"></i> Součástky
                </a>
                <a asp-controller="Projects" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")">
                    <i class="bi bi-clipboard2-check"></i> Projekty
                </a>
                <a asp-controller="Locations" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Locations" ? "active" : "")">
                    <i class="bi bi-geo-alt"></i> Sklad
                </a>
                <a asp-controller="Settings" asp-action="Index">
                    <i class="bi bi-gear"></i> Nastavení
                </a>
            </div>
        </div>

        <div class="sidebar-footer">
            <a href="#" class="text-decoration-none text-secondary d-block mb-2">
                <i class="bi bi-person-circle"></i> Přihlášení
            </a>
            <div class="text-muted small">
                © 2025 | Jan Bruthans<br />
                <small>v1.0.0</small>
            </div>
        </div>
    </nav>

    <main class="main-content">
        <div class="main-inner">
            @RenderBody()
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
