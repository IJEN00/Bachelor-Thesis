@model InventoryApp.Models.Location

@{
    ViewData["Title"] = "Nové umístění";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 60vh;">
    <div class="card border-0 shadow-sm rounded-4 overflow-hidden" style="max-width: 500px; width: 100%;">

        <div class="card-header bg-primary text-white text-center py-4 border-0">
            <div class="mb-2">
                <i class="bi bi-geo-alt-fill" style="font-size: 3rem; opacity: 0.9;"></i>
            </div>
            <h4 class="mb-0 fw-bold">Nové umístění</h4>
            <p class="mb-0 opacity-75 small">Definujte nové místo ve skladu.</p>
        </div>

        <div class="card-body p-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="Rack" class="form-label fw-bold small text-uppercase text-muted">Regál *</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-grid-3x3"></i></span>
                        <input asp-for="Rack" class="form-control border-start-0 ps-0" placeholder="Např. A" />
                    </div>
                    <span asp-validation-for="Rack" class="text-danger small"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Drawer" class="form-label fw-bold small text-uppercase text-muted">Šuplík</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-inboxes"></i></span>
                            <input asp-for="Drawer" class="form-control border-start-0 ps-0" placeholder="Např. 1" />
                        </div>
                        <span asp-validation-for="Drawer" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 mb-4">
                        <label asp-for="Box" class="form-label fw-bold small text-uppercase text-muted">Krabička</label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-end-0 text-muted"><i class="bi bi-box-seam"></i></span>
                            <input asp-for="Box" class="form-control border-start-0 ps-0" placeholder="Např. A2" />
                        </div>
                        <span asp-validation-for="Box" class="text-danger small"></span>
                    </div>
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary btn-lg shadow-sm">
                        Vytvořit
                    </button>
                    <a asp-action="Index" class="btn btn-light btn-lg border">
                        Zrušit
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}